<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>个人中心</title>
    <script src="js/jquery.min.js"></script>
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <script src="js/html5shiv.min.js"></script>
    <script src="js/respond.min.js"></script>
</head>
<body>
<% include head.ejs %>
<div class="container" style="margin-top: 250px">
    <div class="upcontent">
        <div class="left">
            <img src="<%=personal[0].tx%>" class="img-circle"/><br>
            <button class="btn btn-primary">修改头像</button>
        </div>
        <div class="right" style="text-align: left">
            <h1><%=personal[0].uname%></h1>
            <div>
                <h3>昵称：<%=personal[0].uname%></h3>
                <h3>个性签名：<%=personal[0].intro%></h3>
            </div>

        </div>
    </div>
   <div class="downcontent">
       <div class="sarea">
           <h3 class="text-left text-primary">说说列表(<%=counts%>)</h3>
           <hr/>
           <%for(var i=0;i<shuodata.length;i++){%>
           <%for(var j=0;j<personal.length;j++){%>
           <%if(shuodata[i].uname==personal[j].uname){%>
           <div class="da">
               <div class="leave">
                   <div class="lleft">
                       <img src="<%=personal[j].tx%>" class="img-circle"/>
                   </div>
                   <div class="lright">
                       <span style="font-size: 16px;font-weight: bold;"><%=shuodata[i].uname%></span><br/>
                       <span><%=shuodata[i].uptime%></span>
                   </div>
               </div>
               <%}%>
               <%}%>

               <div class="leavecontent"><%=shuodata[i].content%></div>
               <hr class="text-success" />
           </div>
           <%}%>
       </div>
       <nav aria-label="Page navigation" class="page">
           <ul class="pagination">
               <li>
                   <a href="/page<%=prepage%>" aria-label="Previous">
                       <span aria-hidden="true">&laquo;</span>
                   </a>
               </li>
               <%for(var j=0;j<pagecounts;j++){%>
               <li><a href="/page<%=j%>"><%=j+1%></a></li>
               <%}%>
               <li>
                   <a href="/page<%=nextpage%>" aria-label="Next">
                       <span aria-hidden="true">&raquo;</span>
                   </a>
               </li>
           </ul>
       </nav>
   </div>
    <div class="tx">
        <div class="tcontent">
            <form action="#" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputFile">修改头像</label>
                    <input type="file" name="txSrc" value="">
                    <p>注意上传图片尺寸为100*100。</p>
                </div>
                <button type="submit" class="btn btn-default">上传</button>
            </form>
        </div>
    </div>
</div>
</body>
<script type="text/javascript">
    $(".btn").click(function () {
        $(".tx").css("display","block");
    })
</script>
</html>

